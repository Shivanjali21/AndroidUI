<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignInUIThreeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clCurveBg"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:background="@drawable/signin_ui_bg_six"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:srcCompat="@drawable/logo"
        android:layout_margin="40dp"
        app:layout_constraintTop_toTopOf="@id/clCurveBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSmart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/smart_home"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="@+id/ivLogo"
        app:layout_constraintStart_toStartOf="@+id/ivLogo"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"/>

     <androidx.appcompat.widget.AppCompatEditText
         android:id="@+id/etUserEmail"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:hint="@string/user_email"
         android:ems="10"
         android:textColor="@color/color_white"
         android:textColorHint="@color/color_white"
         android:paddingHorizontal="20dp"
         android:background="@drawable/signin_ui_bg_editext"
         android:layout_marginVertical="40dp"
         android:layout_marginHorizontal="40dp"
         android:inputType="textPersonName"
         app:layout_constraintEnd_toEndOf="@+id/tvSmart"
         app:layout_constraintStart_toStartOf="@+id/tvSmart"
         app:layout_constraintTop_toBottomOf="@id/tvSmart"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etUserPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/user_pass"
        android:ems="10"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:paddingHorizontal="20dp"
        android:inputType="textPassword"
        android:background="@drawable/signin_ui_bg_editext"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintEnd_toEndOf="@+id/tvSmart"
        app:layout_constraintStart_toStartOf="@+id/tvSmart"
        app:layout_constraintTop_toBottomOf="@id/etUserEmail"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:layout_marginVertical="80dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/signin_ui_bg_login_btn_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clCurveBg"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:text="@string/login_no_account"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>